<h1>Log in</h1>

<p>
  <%= flash[:error_message] %>
</p>

<%= form_tag login_path do %>
<p>
  <%= label_tag :email,'email' , :class => "badge badge-secondary" %>
  <%= email_field_tag :email %>
</p>

<p>
  <%= label_tag :password,'email' , :class => "badge badge-secondary" %>
  <%= password_field_tag :password %>
</p>
  <%= submit_tag "Sign in", :class => "border border-success rounded-pill btn btn-dark" %>

<% end %>
